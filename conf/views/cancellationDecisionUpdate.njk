{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"        import govukBackLink %}
{% from "macros/title.njk"                            import title %}
{% from "govuk/components/summary-list/macro.njk"     import govukSummaryList %}

{% block pageTitle %}
  {{ title(messages(cancellationOutcome + ".title")) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages(cancellationOutcome + ".heading") }}
        </h1>

        {{ govukSummaryList({
          rows: cancellationDecisionUpdateMessage
        }) }}

        {% if(decision==0) %}
          <p class="govuk-body">{{ messages("cancellationDecisionUpdate.contact.p") }}
            <a href={{ contactUrl }} class="govuk-link" target="_blank" rel="noopener noreferrer">{{ messages("cancellationDecisionUpdate.contact.link") }}</a>.
          </p>
        {% endif %}

      </div>
    </div>
  </div>

{% endblock %}
