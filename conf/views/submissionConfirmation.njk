{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("submissionConfirmation.title")) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <div class="govuk-panel govuk-panel--confirmation">
          <h1 class="govuk-panel__title">
            {{ messages("submissionConfirmation.heading") }}
          </h1>

          <div class="govuk-panel__body">
           {{ messages("submissionConfirmation.submissionText")}}
           <strong>{{lrn}}</strong>
          </div>
        </div>

        <h2 class="govuk-heading-m"> {{ messages("submissionConfirmation.subHeading") }}</h2>

        <p class ="govuk-body">
            <div class="govuk-body">{{ messages("submissionConfirmation.link.pretext") }}</div>
            <ul class="govuk-list govuk-list--bullet">
                <li><a id="manage-transit-movements" href="{{ manageTransitMovementsUrl }}" class="govuk-link"> {{ messages("submissionConfirmation.link.option1") }} </a></li>
                <li><a id="make-another-departure" href="{{ makeAnotherDeparture }}" class="govuk-link"> {{ messages("submissionConfirmation.link.option2") }} </a></li>
            </ul>
        </p>

      </div>
    </div>
  </div>

{% endblock %}
