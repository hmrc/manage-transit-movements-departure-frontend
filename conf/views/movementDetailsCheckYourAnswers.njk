{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "macros/section.njk"                       import section as sectionMacro %}
{% from "govuk/components/button/macro.njk"        import govukButton %}

{% block pageTitle %}
  {{ title(messages("movementDetailsCheckYourAnswers.title")) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("movementDetailsCheckYourAnswers.heading") }}
        </h1>

        {% for section in sections %}
             {{ sectionMacro(section.sectionTitle, section.rows) }}
        {% endfor %}

           {{ csrf() | safe }}

         {{ govukButton({
              text: messages("site.continue"),
              preventDoubleClick: true,
              href: nextPageUrl,
              attributes: {id:"submit"}
            }) }}
      </div>
    </div>
  </div>

{% endblock %}
